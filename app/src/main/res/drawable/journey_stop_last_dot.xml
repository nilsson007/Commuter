<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:gravity="center"
    >
        <shape
            android:shape="oval">
            <size
                android:width="15dp"
                android:height="15dp" />
            <solid
                android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item
        android:gravity="center"
        android:height="40sp">
        <shape
            android:shape="rectangle">
            <size android:height="40sp"
                android:width="3dp"/>
            <solid
                android:color="#00000000"/>
        </shape>
    </item>
    <item
        android:gravity="center|top">
        <shape
            android:shape="rectangle">
            <size android:height="20sp"
                android:width="3dp"/>
            <solid
                android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item
        android:gravity="center"
        >
        <shape
            android:shape="oval">
            <size
                android:width="7dp"
                android:height="7dp" />
            <solid
                android:color="#cc0"/>
        </shape>
    </item>
</layer-list>