<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="0dp"
        tools:context="com.development.android.commuter.TramStopFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:background="@color/colorPrimary"
            android:layout_height="50sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:id="@+id/tram_stop_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_centerInParent="true"
                android:id="@+id/tram_stop_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:id="@+id/tram_stop_distance"/>
            <ImageButton
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_margin="2.5sp"
                android:visibility="invisible"
                android:background="@drawable/ic_cancel_black_24dp"
                android:contentDescription="@null"
                android:id="@+id/tram_stop_close"/>
        </RelativeLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/tram_stop_list"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</RelativeLayout>
