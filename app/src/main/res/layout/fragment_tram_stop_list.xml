<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="4dp"
        tools:context="com.development.android.commuter.TramStopFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:background="@color/colorPrimary"
            android:layout_height="50sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_centerInParent="true"
                android:id="@+id/tram_stop_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"
                android:id="@+id/tram_stop_distance"/>
        </RelativeLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/tram_stop_list"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/on_journey_fragment"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:elevation="3dp"
        android:background="#5000">
        <!--<fragment class="com.development.android.commuter.TramStopFragment"
            android:id="@+id/poopUpFragment"
            android:layout_width="10dp"
            android:layout_height="10dp" />-->
    </FrameLayout>
</RelativeLayout>
